<%- include('partials/header') %>
<div class="container">
<h1>New Movies</h1>
<form class="navbar-form navbar">
    <div class="form-group">
      <input type="text" class="form-control" placeholder="Search movie" id="searchbar" onkeyup="search_animal()">
      <ul id='list'>
            <li class="animals" id="width-col" style="list-style: none;">    
            <div class="row mb-3"> 
                <% items.forEach(function(image) { %>    
                <div class="column card" style="margin: 10px; width: 30.33%;" align="center">
                    <a href="movie/<%= image.name %>">
                            <img src="data:image/<%=image.img.contentType%>;base64,
                            <%=image.img.data.toString('base64')%>" style="width:18rem; height:300px; padding-top: 2%;" >
                            <div class="card-body" >
                                <h5 class ='card-body' id="image_name"><%= image.name %></h5>
                                <!-- <p class ='card-body' id="image_desc"><%= image.desc %></p> -->
                            </div>
                    </a>
                </div>
                <% }) %>
            </div>  
            </li>
        </ul>
    </div>

    <!-- <button type="submit" class="btn btn-danger">
      <span class="glyphicon glyphicon-search"></span> Search
    </button> -->
  </form>
<p><strong><%= lines %></strong></p>
</div>
</body>
<footer>
  <div class="footer container-fluid" style="position:inherit; bottom:0px">
    <div class="row">
      <div class="col-md-4">
        <h3>Movie Timez</h3>
        <p>Movie Timez is a movie review website where you can find the latest movie reviews and ratings from our users. You can also find the latest movie trailers and news.</p>
      </div>
      <div class="col-md-4">
        <h3>Quick Links</h3>
        <ul class="list-unstyled">
          <li><a href="/">Home</a></li>
          <li><a href="#">About</a></li>
          <li><a href="#">Contact</a></li>
          <li><a href="#">Privacy Policy</a></li>
          <li><a href="/theater">Theater Login</a></li>
        </ul>
      </div>
      <div class="col-md-4">
        <h3>Follow Us</h3>
        <ul class="list-unstyled">
          <li><a href="#">Facebook</a></li>
          <li><a href="#">Twitter</a></li>
          <li><a href="#">Instagram</a></li>
          <li><a href="#">YouTube</a></li>
        </ul>
      </div>
    </div>
  </div>
</footer>
